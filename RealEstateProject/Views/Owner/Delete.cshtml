@model RealEstateProject.Models.Owner

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <style>
        body {
            background-color: lavender;
        }

        h4 {
            color: red;
            font-size: 30px;
            text-align: center;
        }

        dt {
            color: mediumvioletred;
            font-size: 25px;
            
        }

        dd {
            color: darkblue;
            font-size: 20px;
            
        }

        p {
            color: maroon;
            text-align: center;
            font-size: 30px;
        }
    </style>
</head>
<body>
    <h3 style="color:red ;font-size:20px">Are you sure you want to delete this?</h3>
    <div>
        <h4><u>Selected Owner Details</u></h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Fname) : 
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Fname)
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.Lname) :
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Lname)
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.Address) :
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Address)
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.TelNo) :
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.TelNo)
            </dd>
    
        </dl>
    
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
            
                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" style="color:darkblue;font-size:20px" /> 

                </div>

                <div style="color:darkblue;font-size:25px">
                    @Html.ActionLink("Back to Owner Details", "Index")
                </div>
            
        }
    </div>
</body>
</html>
